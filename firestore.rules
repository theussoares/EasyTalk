// firestore.rules
// Estas são as regras de segurança que você deve configurar no Firebase Console
// Vá para: Firebase Console > Firestore Database > Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para a coleção de lições
    match /lessons/{document} {
      // Permitir leitura para qualquer usuário autenticado
      allow read: if request.auth != null;
      
      // Permitir escrita apenas para o email autorizado
      allow write: if request.auth != null 
                   && request.auth.token.email == 'matheusdev.play55@gmail.com';
    }
    
    // Negar acesso a qualquer outro documento
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
